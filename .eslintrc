{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "rules": {
    /********* ESLint *********/

    // Possible Errors
    "comma-dangle": [2, "only-multiline"],
    "no-debugger": 2,
    "no-dupe-args": 1,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-empty-character-class": 2,
    "no-empty": [2, { "allowEmptyCatch": true }],
    "no-extra-semi": 2,
    "no-obj-calls": 2,
    "no-sparse-arrays": 2,
    "no-unreachable": 2,
    "no-unsafe-finally": 2,
    "valid-typeof": 2,

    // Best Practices
    "array-callback-return": 2,
    "block-scoped-var": 1,
    "curly": 2,
    "dot-location": [2, "property"],
    "dot-notation": 2,
    "eqeqeq": [2, "always"],
    "guard-for-in": 1,
    "no-eq-null": 2,
    "no-fallthrough": 1,
    "no-lone-blocks": 2,
    "no-new-wrappers": 2,
    "no-redeclare": 2,
    "no-return-assign": [2, "always"],
    "no-self-assign": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-unmodified-loop-condition": 2,
    "no-unused-expressions": [2,
      {
        "allowShortCircuit": true,
        "allowTernary": true
      }
    ],
    "no-useless-concat": 2,
    "no-useless-escape": 2,
    "wrap-iife": [2, "inside"],
    "yoda": 2,

    // Strict Mode
    "strict": [2, "safe"],

    // Variables
    "no-shadow-restricted-names": 2,
    "no-undef": [2, { "typeof": false }],
    "no-undefined": 2,
    "no-unused-vars": [2, { "args": "none" }],
    "no-use-before-define": [2, { "functions": true }],

    // Stylistic Issues
    "array-bracket-spacing": [2, "never",
      {
        "arraysInArrays": false,
        "objectsInArrays": false
      }
    ],
    "block-spacing": 2,
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "comma-spacing": [2,
      {
        "before": false,
        "after": true
      }
    ],
    "comma-style": [2, "last"],
    "computed-property-spacing": 2,
    "func-call-spacing": 2,
    "indent": [2, 4, { "SwitchCase": 1 }],
    "jsx-quotes": [2, "prefer-double"],
    "key-spacing": [2, { "mode": "strict" }],
    "keyword-spacing": 2,
    "new-cap": [2, { "capIsNew": false }],
    "new-parens": 2,
    "newline-before-return": 2,
    "no-mixed-operators": 2,
    "no-mixed-spaces-and-tabs": [2, "smart-tabs"],
    "no-trailing-spaces": 2,
    "no-whitespace-before-property": 2,
    "object-curly-spacing": [2, "always"],
    "quote-props": [2, "consistent-as-needed", { "keywords": true }],
    "quotes": [2, "single", { "avoidEscape": true }],
    "semi": [2, "always"],
    "semi-spacing": [2,
      {
        "before": false,
        "after": true
      }
    ],
    "space-before-blocks": 2,
    "space-before-function-paren": [2,
      {
        "anonymous": "always",
        "named": "never"
      }
    ],
    "space-in-parens": 2,
    "space-unary-ops": 2,
    "spaced-comment": [2, "always", { "exceptions": ["*"] }]
  }
}